<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampgroundInfoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/campground_name_info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#d28622"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:gravity="center_vertical|center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:scrollIndicators="bottom|right"
        android:nestedScrollingEnabled="true"
        android:background="#adb3b3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dates of Operation"
            android:id="@+id/label_dates_open"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#010101"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_dates_open"
            android:layout_alignTop="@+id/label_dates_open"
            android:layout_toRightOf="@+id/label_dates_open"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@id/label_dates_open"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Number of campsites"
            android:id="@+id/label_num_campsites"
            android:layout_below="@+id/label_dates_open"
            android:layout_alignLeft="@+id/label_dates_open"
            android:layout_alignStart="@+id/label_dates_open"
            android:layout_marginTop="10dp"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_num_campsites"
            android:layout_alignTop="@+id/label_num_campsites"
            android:layout_alignLeft="@+id/tv_dates_open"
            android:layout_alignStart="@+id/tv_dates_open"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fee"
            android:id="@+id/label_fee"
            android:layout_below="@+id/label_num_campsites"
            android:layout_alignLeft="@+id/label_num_campsites"
            android:layout_alignStart="@+id/label_num_campsites"
            android:layout_marginTop="10dp"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_fee"
            android:layout_alignTop="@+id/label_fee"
            android:layout_alignRight="@+id/tv_num_campsites"
            android:layout_alignEnd="@+id/tv_num_campsites"
            android:layout_above="@+id/label_reservations"
            android:layout_alignLeft="@+id/tv_num_campsites"
            android:layout_alignStart="@+id/tv_num_campsites"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reservations"
            android:id="@+id/label_reservations"
            android:layout_below="@+id/label_fee"
            android:layout_alignLeft="@+id/label_fee"
            android:layout_alignStart="@+id/label_fee"
            android:layout_marginTop="10dp"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_reservations"
            android:layout_alignTop="@+id/label_reservations"
            android:layout_alignLeft="@+id/tv_fee"
            android:layout_alignStart="@+id/tv_fee"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bathroom type"
            android:id="@+id/label_bath_type"
            android:layout_below="@+id/label_reservations"
            android:layout_alignLeft="@+id/label_reservations"
            android:layout_alignStart="@+id/label_reservations"
            android:layout_marginTop="10dp"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_bath_type"
            android:layout_alignTop="@+id/label_bath_type"
            android:layout_alignLeft="@+id/tv_reservations"
            android:layout_alignStart="@+id/tv_reservations"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shower"
            android:id="@+id/label_shower"
            android:layout_below="@+id/label_bath_type"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/label_bath_type"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_shower"
            android:layout_alignTop="@+id/label_shower"
            android:layout_alignLeft="@+id/tv_bath_type"
            android:layout_alignStart="@+id/tv_bath_type"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RV Hookup"
            android:id="@+id/label_rv_hookup"
            android:layout_below="@+id/label_shower"
            android:layout_alignRight="@+id/label_num_campsites"
            android:layout_alignEnd="@+id/label_num_campsites"
            android:layout_alignLeft="@+id/label_shower"
            android:layout_alignStart="@+id/label_shower"
            android:layout_marginTop="10dp"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_rvHookup"
            android:layout_alignTop="@+id/label_rv_hookup"
            android:layout_alignLeft="@+id/tv_shower"
            android:layout_alignStart="@+id/tv_shower"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dump Station"
            android:id="@+id/label_dump_station"
            android:layout_below="@+id/label_rv_hookup"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/label_rv_hookup"
            android:layout_alignStart="@id/label_rv_hookup"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_dump_station"
            android:layout_alignTop="@+id/label_dump_station"
            android:layout_alignLeft="@+id/tv_rvHookup"
            android:layout_alignStart="@+id/tv_rvHookup"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLICK TO VIEW REVIEWS"
            android:background="#d28622"
            android:id="@+id/button_view_review"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:layout_below="@+id/label_avg_rating"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK TO CAMPGROUNDS LIST"
            android:id="@+id/button_back_camp_list"
            android:background="#d28622"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:layout_below="@+id/button_view_review"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Average rating"
            android:id="@+id/label_avg_rating"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/label_dump_station"
            android:layout_alignLeft="@+id/label_dump_station"
            android:layout_alignStart="@+id/label_dump_station"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_avg_rating"
            android:layout_alignTop="@+id/label_avg_rating"
            android:layout_alignLeft="@+id/tv_dump_station"
            android:layout_alignStart="@+id/tv_dump_station"
            android:textColor="#030303"
            android:typeface="serif"
            android:padding="2dp" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
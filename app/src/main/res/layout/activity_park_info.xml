<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/park_name_in_info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center"
        android:overScrollMode="always"
        android:scrollIndicators="right">

        <TextView
            android:layout_width="500dp"
            android:layout_height="90dp"
            android:id="@+id/textView1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollbars="vertical"
            android:gravity="top"
            android:layout_marginTop="58dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <!--
        <ScrollView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/ScrollView1"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_above="@+id/textView2"
            android:layout_toRightOf="@+id/tv_best_time_visit"
            android:layout_toEndOf="@+id/tv_best_time_visit" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv1 about Text"
                android:id="@+id/textView1"/>

        </ScrollView>

        -->

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/park_loc"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_park_loc"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/textView2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_above="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/best_time_visit"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_best_time_visit"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/tv_park_loc"
            android:layout_alignStart="@+id/tv_park_loc" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/textView3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/to_do"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_to_do"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/tv_best_time_visit"
            android:layout_alignStart="@+id/tv_best_time_visit" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/textView4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollbars="vertical"
            android:layout_alignTop="@+id/tv_to_do"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="10dp" />

        <!--

        <ScrollView
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:id="@+id/ScrollView4"
            android:layout_above="@+id/ScrollView5"
            android:layout_alignLeft="@+id/ScrollView5"

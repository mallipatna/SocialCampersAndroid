<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/park_name_in_info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center"
        android:overScrollMode="always"
        android:scrollIndicators="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/about"
            android:id="@+id/tv_about"
            android:layout_alignTop="@+id/textView1"
            android:layout_alignLeft="@+id/tv_park_loc"
            android:layout_alignStart="@+id/tv_park_loc" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="tv1 about Text"
            android:id="@+id/textView1"
            android:nestedScrollingEnabled="true"
            android:scrollIndicators="right"
            android:layout_above="@+id/textView2"
            android:layout_alignRight="@+id/tv_campgrounds_list"
            android:layout_alignEnd="@+id/tv_campgrounds_list" />


        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/park_loc"
            android:id="@+id/tv_park_loc"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignLeft="@+id/tv_best_time_visit"
            android:layout_alignStart="@+id/tv_best_time_visit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="tv2 location Text"
            android:id="@+id/textView2"
            android:layout_above="@+id/textView3"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignEnd="@+id/textView1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/best_time_visit"
            android:id="@+id/tv_best_time_visit"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="tv3 best ttv Text"
            android:id="@+id/textView3"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/to_do"
            android:id="@+id/tv_to_do"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/tv_best_time_visit"
            android:layout_alignStart="@+id/tv_best_time_visit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="tv4 todo  Text"
            android:id="@+id/textView4"
            android:scrollIndicators="right"
            android:layout_above="@+id/textView5"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignRight="@+id/tv_campgrounds_list"
            android:layout_alignEnd="@+id/tv_campgrounds_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/places_to_go"
            android:id="@+id/tv_to_go"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignLeft="@+id/tv_to_do"
            android:layout_alignStart="@+id/tv_to_do" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="tv5 togo Text"
            android:id="@+id/textView5"
            android:layout_above="@+id/tv_campgrounds_list"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />


        <!-- Text view and list view to list campgrounds-->
        <TextView
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:text="@string/campgrounds_list"
            android:id="@+id/tv_campgrounds_list"
            android:layout_above="@+id/lv_campgrounds_list"
            android:layout_centerHorizontal="true" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/lv_campgrounds_list"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkInfoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/park_name_in_info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:typeface="serif"
        android:textColor="#ffffff"
        android:background="#d28622"
        android:gravity="center_vertical|center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center"
        android:overScrollMode="always"
        android:layout_marginTop="50dp"
        android:scrollIndicators="bottom|right"
        android:background="#FFD2D2D2">

        <TextView
            android:layout_width="500dp"
            android:layout_height="70dp"
            android:id="@+id/textView1"
            android:scrollbars="vertical"
            android:gravity="center_vertical|center_horizontal|top"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:typeface="serif"
            android:textColor="#060606"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/park_loc"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_park_loc"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:typeface="serif"
            android:textColor="#060606" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/textView2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/textView1"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginBottom="10dp"
            android:typeface="serif"
            android:textColor="#060606" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/best_time_visit"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_best_time_visit"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/tv_park_loc"
            android:layout_alignStart="@+id/tv_park_loc"
            android:layout_marginBottom="10dp"
            android:typeface="serif"
            android:textColor="#060606" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/textView3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignEnd="@+id/textView1"
            android:typeface="serif"
            android:textColor="#060606" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/to_do"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_to_do"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignLeft="@+id/tv_best_time_visit"
            android:layout_alignStart="@+id/tv_best_time_visit"
            android:typeface="serif"
            android:textColor="#060606" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:id="@+id/textView4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollbars="vertical"
            android:textStyle="normal"
            android:textAlignment="inherit"
            android:paddingTop="-20dp"
            android:layout_below="@+id/tv_best_time_visit"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:typeface="serif"
            android:textColor="#060606" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/places_to_go"
            android:id="@+id/tv_to_go"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignLeft="@+id/tv_to_do"
            android:layout_alignStart="@+id/tv_to_do"
            android:typeface="serif"
            android:textColor="#060606" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:id="@+id/textView5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollbars="vertical"
            android:layout_below="@+id/textView4"
            android:layout_alignRight="@+id/textView1"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:typeface="serif"
            android:textColor="#060606" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_view_campgrounds_list"
            android:text="@string/campgrounds_list_button"
            android:background="#d28622"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK TO LIST OF PARKS"
            android:id="@+id/button_back_park_list"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#d28622"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ParkInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_park_info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center"
        android:scrollIndicators="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/park_name"
            android:id="@+id/tv_park_name"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tv_park_loc"
            android:layout_alignStart="@+id/tv_park_loc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/park_loc"
            android:id="@+id/tv_park_loc"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/tv_park_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/best_time_visit"
            android:id="@+id/tv_best_time_visit"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_park_loc"
            android:layout_alignLeft="@+id/tv_park_loc"
            android:layout_alignStart="@+id/tv_park_loc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/to_do"
            android:id="@+id/tv_to_do"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_best_time_visit"
            android:layout_alignLeft="@+id/tv_best_time_visit"
            android:layout_alignStart="@+id/tv_best_time_visit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/campgrounds_list"
            android:id="@+id/tv_campgrounds_list"
            android:layout_below="@+id/tv_to_do"
            android:layout_alignLeft="@+id/tv_to_do"
            android:layout_alignStart="@+id/tv_to_do"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/tv_park_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="22dp"
            android:layout_marginEnd="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView3"
            android:layout_above="@+id/tv_best_time_visit"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/tv_best_time_visit"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView5"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_above="@+id/tv_campgrounds_list"
            android:scrollIndicators="right"
            android:layout_alignTop="@+id/tv_to_do" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:id="@+id/lv_campgrounds_list"
            android:layout_alignLeft="@+id/tv_campgrounds_list"
            android:layout_alignStart="@+id/tv_campgrounds_list"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_below="@+id/tv_campgrounds_list" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/image_park_info_1"
            android:src="@drawable/camp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/lv_campgrounds_list"
            android:layout_alignStart="@+id/lv_campgrounds_list" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/image_park_info_2"
            android:src="@drawable/camp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

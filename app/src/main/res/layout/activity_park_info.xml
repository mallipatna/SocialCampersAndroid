        <!-- Text view and list view to list campgrounds-->


        <!-- <ListView
             android:layout_width="fill_parent"
             android:layout_height="100dp"
             android:id="@+id/lv_campgrounds_list"
             android:layout_below="@+id/tv_campgrounds_list"
             style="@style/Base.TextAppearance.AppCompat.Button"
             android:layout_alignParentLeft="false"
             android:layout_alignParentStart="true"
             android:layout_alignParentBottom="true"
             android:layout_marginTop="10dp" />
         -->

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/button_view_campgrounds_list"
            android:text="@string/campgrounds_list_button"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

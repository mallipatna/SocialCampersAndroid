<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ParkInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/park_name_in_info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center"
        android:overScrollMode="always"
        android:scrollIndicators="right">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/park_loc"
            android:id="@+id/tv_park_loc"
            android:layout_alignTop="@+id/textView1"
            android:layout_toLeftOf="@+id/textView1"
            android:layout_toStartOf="@+id/textView1" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView1"
            android:layout_marginTop="71dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/best_time_visit"
            android:id="@+id/tv_best_time_visit"
            android:layout_below="@+id/tv_park_loc"
            android:layout_alignLeft="@+id/tv_park_loc"
            android:layout_alignStart="@+id/tv_park_loc"
            android:layout_marginTop="32dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/tv_best_time_visit"
            android:layout_alignRight="@+id/tv_campgrounds_list"
            android:layout_alignEnd="@+id/tv_campgrounds_list"
            android:layout_alignBottom="@+id/tv_best_time_visit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/to_do"
            android:id="@+id/tv_to_do"
            android:layout_below="@+id/tv_best_time_visit"
            android:layout_alignLeft="@+id/tv_best_time_visit"
            android:layout_alignStart="@+id/tv_best_time_visit"
            android:layout_marginTop="37dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/tv_to_do"
            android:layout_toRightOf="@+id/tv_best_time_visit"
            android:layout_toEndOf="@+id/tv_best_time_visit" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/campgrounds_list"
            android:id="@+id/tv_campgrounds_list"
            android:layout_above="@+id/lv_campgrounds_list"
            android:layout_centerHorizontal="true" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/lv_campgrounds_list"
            android:layout_marginBottom="79dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_campgrounds_list"
            android:layout_alignStart="@+id/tv_campgrounds_list" />



    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
